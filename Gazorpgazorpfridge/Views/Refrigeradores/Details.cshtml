@model Gazorpgazorpfridge.Models.RefriDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Mi Refri</h2>

<div>
    <h4>Refrigerador</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.refrigerador.Modelo.codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.refrigerador.Modelo.codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.refrigerador.capacidad_restante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.refrigerador.capacidad_restante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.refrigerador.Modelo.capacidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.refrigerador.Modelo.capacidad)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.refrigerador.Modelo.indiceEnfriamiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.refrigerador.Modelo.indiceEnfriamiento)
        </dd>
    </dl>
    <h4>Canasta básica</h4>
    <hr />
    <dl class="dl-horizontal">
        
        @if (Model != null && Model.canastaBasica != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.canastaBasica.descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.canastaBasica.descripcion)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.canastaBasica.perEscasez)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.canastaBasica.perEscasez)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.canastaBasica.productForCanasta)
            </dt>
            foreach (var item in Model.canastaBasica.productForCanasta)
            {
                <dd>
                    @Html.DisplayFor(modelItem => item.Producto.nombre)
                </dd>
                <dd>
                    @Html.DisplayFor(modelItem => item.CantidadMaxima)
                </dd>
            }
            <br />
            <br />
            @Html.ActionLink("Añadir Producto", "CreateForCanasta", "ProductForCanastas", new { id = Model.canastaBasica.id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Editar canasta básica", "../CanastaBasica/Edit", new { id = Model.canastaBasica.id }, new { @class = "btn btn-default" })
        }
        else
        {
            <h3>No tienes definida una canasta</h3>
            @Html.ActionLink("Crear canasta", "Create", "CanastaBasica", new { id = Model.refrigerador.id }, new { @class = "btn btn-warning" })
        }
    </dl>
</div>
<p>
    @* @Html.ActionLink("Edit", "Edit", new { id = Model.id }) | *@
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
</p>
